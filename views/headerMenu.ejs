<!-- menu -->
<aside class="menu" id="menu">
  <div class="menu-drawer" id="menu-drawer">
    <i class="material-icons">menu</i>
  </div>

  <div class="menu-item">
    <a href="/" class="menu-link">
      <i class="material-icons">dashboard</i><span>Dashboard</span>
    </a>
  </div>

  <% if (loggedInStatus === 'not logged in') { %>
    <div class="menu-item">
      <a href="/users/login" class="menu-link">
        <i class="material-icons">login</i><span>Login</span>
      </a>
    </div>
  <% } else { %>
    <div class="menu-item">
      <a href="/ingredients" class="menu-link">
        <i class="material-icons">inventory</i><span>Ingredients</span>
      </a>
    </div>
    <div class="menu-item">
      <a href="/recipes" class="menu-link">
        <i class="material-icons">restaurant_menu</i><span>Recipes</span>
      </a>
    </div>
    <div class="menu-item">
      <a href="/scrapes/createBatch" class="menu-link"
        ><i class="material-icons">cloud_download</i><span>Scrape MOQs</span>
      </a>
    </div>
    <div class="menu-item">
      <a href="/users/manage" class="menu-link">
        <i class="material-icons">manage_accounts</i><span>Manage Users</span>
      </a>
    </div>
    <div class="menu-item">
      <a href="/reports/weeklySummary" class="menu-link">
        <i class="material-icons">file_download</i><span>Export Waste Data</span>
      </a>
    </div>
    <div class="menu-item">
      <a href="/users/logout" class="menu-link">
        <i class="material-icons">logout</i><span>Logout</span>
      </a>
    </div>
  <% } %>
</aside>

<!-- header that stays at the top of the page -->
<header class="header">
  <div class="header-title">Food Manager Admin App</div>
  <div class="user-info">
    <% if (loggedInStatus === 'not logged in') { %> not logged in <% } else { %>
    <i class="material-icons">account_circle</i
    ><span><%= loggedInStatus %></span>
    <% } %>
  </div>
</header>
